{
  "name": "lucaverse-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for lucaverse.com",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:workers": "cd ../lucaverse-auth && npm run test && cd ../summer-heart-worker && npm run test",
    "test:security": "node security/run-security-tests.js",
    "test:all": "npm run test:coverage && npm run test:workers && npm run test:e2e",
    "test:report": "node generate-test-report.js",
    "test:full": "npm run test:all && npm run test:report",
    "install:deps": "npm install && npx playwright install",
    "setup": "npm run install:deps && npm run test:coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@playwright/test": "^1.42.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "supertest": "^6.3.4",
    "msw": "^2.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^24.0.0",
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setup/jest.setup.js"
    ],
    "moduleNameMapper": {
      "\\.module\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^../../src/(.*)$": "<rootDir>/../src/$1",
      "^../../../src/(.*)$": "<rootDir>/../src/$1"
    },
    "transform": {
      "^.+\\.(js|jsx)$": ["babel-jest", {
        "presets": [
          ["@babel/preset-env", { 
            "targets": { "node": "current" },
            "modules": "commonjs"
          }],
          ["@babel/preset-react", { "runtime": "automatic" }]
        ]
      }]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ],
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "<rootDir>/../src/**/*.{js,jsx}",
      "!<rootDir>/../src/main.jsx",
      "!<rootDir>/../src/**/*.test.{js,jsx}",
      "!<rootDir>/../src/**/__tests__/**",
      "!<rootDir>/../src/**/*.stories.{js,jsx}",
      "!<rootDir>/../node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "<rootDir>/unit/**/*.test.{js,jsx}",
      "<rootDir>/integration/**/*.test.{js,jsx}",
      "<rootDir>/security/**/*.test.{js,jsx}"
    ]
  }
}