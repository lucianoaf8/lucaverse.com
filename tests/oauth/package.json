{
  "name": "lucaverse-oauth-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive OAuth authentication test suite for lucaverse.com",
  "main": "comprehensive-oauth-test-suite.js",
  "scripts": {
    "test": "node comprehensive-oauth-test-suite.js",
    "test:ci": "node comprehensive-oauth-test-suite.js --ci",
    "test:parallel": "node comprehensive-oauth-test-suite.js --parallel",
    "test:popup": "node oauth-popup-communication-test.js",
    "test:session": "node oauth-session-storage-test.js",
    "test:browser": "node oauth-browser-automation-test.js",
    "test:mcp": "node oauth-mcp-browser-test.js",
    "test:main": "node oauth-flow-main.js",
    "test:all": "npm run test",
    "test:quick": "node comprehensive-oauth-test-suite.js --no-dashboard --no-retry",
    "clean": "rimraf reports/* screenshots/*",
    "validate": "node -c comprehensive-oauth-test-suite.js && node -c oauth-popup-communication-test.js && node -c oauth-session-storage-test.js && node -c oauth-browser-automation-test.js && node -c oauth-mcp-browser-test.js"
  },
  "keywords": [
    "oauth",
    "authentication",
    "testing",
    "puppeteer",
    "browser-automation",
    "lucaverse",
    "popup",
    "cross-origin",
    "mcp"
  ],
  "author": "Claude Code Assistant",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luciano-af8/lucaverse.com.git"
  },
  "bugs": {
    "url": "https://github.com/luciano-af8/lucaverse.com/issues"
  },
  "homepage": "https://lucaverse.com"
}